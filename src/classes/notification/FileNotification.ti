class FileNotification extends Notification

function FileNotification:__init__( message )
    self:super( "File Transfer Request", "Client "..message.sender .. ( message.name and " (" .. message.name .. ")" or "" ) .. " is requesting a file transfer", { { "accept", "Accept Transfer" }, { "deny", "Deny Transfer" }, {"block", "Block Sender"}, {"view", "View Files"} } )

    self:on("accept", function()
        pages:selectPage "receive"
    end)

    self:on("deny", function()

    end)
end
